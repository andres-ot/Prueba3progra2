<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServUser</servlet-name>
        <servlet-class>ServUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServBook</servlet-name>
        <servlet-class>ServBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServNation</servlet-name>
        <servlet-class>ServNation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServAuthor</servlet-name>
        <servlet-class>ServAuthor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>verifyLogin</servlet-name>
        <servlet-class>verifyLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServUser</servlet-name>
        <url-pattern>/ServUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServBook</servlet-name>
        <url-pattern>/ServBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServNation</servlet-name>
        <url-pattern>/ServNation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServAuthor</servlet-name>
        <url-pattern>/ServAuthor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>verifyLogin</servlet-name>
        <url-pattern>/verifyLogin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
